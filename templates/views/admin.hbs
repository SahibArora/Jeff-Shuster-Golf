</head>
<body>
    {{>header}}

    <div id='main' class='TypeOldBlackLight'>
        <div class="sidenav">
            <a onclick='showContent("bookings")' href="#">Bookings</a>
            <a onclick='showContent("messages")' href="#">Messages</a>
            <a onclick='showContent("subscribers")' href="#">Subscribers</a>
            <br><br>
            <a href="/admin/logout" style='font-size: 20px'>Logout</a>
            <a href="/admin/logoutall" style='font-size: 20px'>Logout Everywhere</a>
        </div>

        <div id='content'>

