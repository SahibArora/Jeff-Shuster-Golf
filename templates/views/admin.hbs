                <div id='content-title'>
                    <h1>Bookings</h1>
                    <hr>
                </div>
                <div id='content-main'>
                    <div id='totalBookings'>

                    </div>
                    <div id='listBookings'>

                    </div>
                    <div id='bookingMessage' style='display: block'>
                        <br>
                        <h3>Message</h3>
                        <div id='showMessage'>

                        </div>
                    </div>
                </div>
            </div>

            <div id='messages' style='display: none'>
                <div id='content-title'>
                    <h1>Messages</h1>
                    <hr>
                </div>
                <div id='content-main'>
                    <div id='totalMessages'>

                    </div>
                    <div id='listMessages'>

                    </div>
                </div>
            </div>

            <div id='subscribers' style='display: none'>
                <div id='content-title'>
                    <h1>Subscribers</h1>
                    <hr>
                </div>
                <div id='content-main'>
                    <div id='totalEmails'>

                    </div>
                    <div id='listEmails'>

                    </div>
                </div>
            </div>
        </div>

    </div>

    {{>footer}}
